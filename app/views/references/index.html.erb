<div class="page-header button-header">
  <h1>References</h1>
  <div class="pull-right">
    <%= link_to raw("<i class='fa fa-plus'></i> New reference"), new_reference_path, class: "btn btn-success" %>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><%= reference.ref_type %></td>
        <td><%= reference.name %></td>
        <td><%= link_to 'Show', reference %></td>
        <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
        <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
