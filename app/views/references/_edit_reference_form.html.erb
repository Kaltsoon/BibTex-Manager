<%= form_tag reference_path(reference), method: :put do %>
  <div class="form-group">
    <%= label_tag "Id" %>
    <%= text_field_tag "reference[name]", reference.name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Save", class: "btn btn-primary" %>
  </div>
<% end %>