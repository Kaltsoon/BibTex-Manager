<!DOCTYPE html>
<html>
<head>
  <title>BibTex manager</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-default">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<%= link_to "BibTex manager", "/", class: "navbar-brand" %>
		</div>
		<div class="navbar-collapse collapse navbar-responsive-collapse">
			<ul class="nav navbar-nav">
				<li><%= link_to "References", references_path %></li>
				<li><%= link_to raw("<i class='fa fa-download'></i> Download all references</a></li>"), "/download_all_references", id: "download_bibtex_link" %>
				<li><%= link_to raw("<i class='fa fa-eye'></i> View plain BibTex"), "/plain_bibtex" %></li>
				<li><a href="#" data-toggle="modal" data-target="#fetch-references-from-acm"><i class="fa fa-truck"></i> Fetch references from ACM</a></li>
			</ul>
		</div>
	</div>
 	<div class="wrapper">
 		<div class="container">
			<%= yield %>
		</div>
	</div>
	<div class="modal fade" id="fetch-references-from-acm" tabindex="-1" role="dialog" aria-labelledby="fetch-references-from-acm" aria-hidden="true">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		      	<div class="modal-header">
		        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		        	<h4 class="modal-title" id="myModalLabel">Fetch references from ACM</h4>
		      	</div>
		      	<div class="modal-body">
		      		<div class="alert alert-info alert-dismissable">
			            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			            Type in the location (url) of your references in ACM. F.e <i>http://dl.acm.org/citation.cfm?id=2380613</i>
			        </div>
			        <%= form_tag "/acm_fetch_results", method: :post do %>
			        	<div class="form-group">
			        		<%= text_field_tag "url", "", class: "form-control", placeholder: "ACM url" %>
			        	</div>
			        	<div class="form-group">
			        		<%= submit_tag "Fetch references", class: "btn btn-primary" %>
				        </div>
			        <% end %>
		      	</div>
		      	<div class="modal-footer">
		        	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      	</div>
		    </div>
		 </div>
	</div>
</body>
</html>
